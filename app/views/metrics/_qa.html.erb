<tr>
  <th rowspan=1 colspan="3"><%= l('cmi.label_ac_effort') %></th>
  <% @names.each_with_index do |report, i| -%>
    <% content_tag :td, :id => "qa_effort_corrective_#{i}", :class => "issue" do -%>
