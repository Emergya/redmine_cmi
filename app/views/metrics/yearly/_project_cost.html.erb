      <% if metric.checkpoint.new_record? %>
        <img src="http://chart.apis.google.com/chart?cht=bhs&chd=t:<%= metric.hhrr_cost_percent_incurred_year.round(2) %>,<%= metric.material_cost_percent_incurred_year.round(2) %>,<%= metric.bpo_cost_percent_incurred_year.round(2) %>,<%= metric.total_cost_percent_incurred_year.round(2) %>|100,100,100&chco=4D89F9,C6D9FD&  chbh=10,5,10&chs=250x90&chxt=x,y&chxl=0:|0|50|100|1:|<%=l :label_total %>: <%= percent metric.total_cost_percent_incurred_year %>|<%=l :'cmi.label_bpo' %>: <%= percent metric.bpo_cost_percent_incurred_year %>|<%=l :'cmi.label_others' %>: <%= percent metric.material_cost_percent_incurred_year %>|<%=l :'cmi.label_HHRR' %>: <%= percent metric.hhrr_cost_percent_incurred_year %>|"/>
